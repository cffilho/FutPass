@model Teste_de_aplicação.Models.Player

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-8">
        <h5 class="m-0 font-weight-bold text-primary">Edit Player</h5>
    </div>
</div>

