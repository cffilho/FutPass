@model IEnumerable<Teste_de_aplicação.Models.Users>

@{
    ViewBag.Title = "Index";
}

<div class="card shadow mb-4">

    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-8">
                <h5 class="m-0 font-weight-bold text-primary">Users</h5>
            </div>
            <div class="col-sm-4">

                <a href="@Url.Action("Create","Users")" class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fa fa-user-plus"></i>
                    </span>
                    <span class="text">Add User</span>
                </a>

            </div>
        </div>
    </div>


    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">


                <div class="row">
                    <div class="col-sm-12">
                        <table table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Name: activate to sort column descending" aria-sort="ascending" style="width: 90px;">First Name</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Date of Birth: activate to sort column ascending" style="width: 90px;">Last Name</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Club: activate to sort column ascending" style="width: 90px;">E-mail</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Country: activate to sort column ascending" style="width: 90px;">Status</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Country: activate to sort column ascending" style="width: 90px;">Role</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Country: activate to sort column ascending" style="width: 65px;"></th>


</thead>

                            <tfoot>
                                <tr>
                                    <th rowspan="1" colspan="1">First Name</th>
                                    <th rowspan="1" colspan="1">Last Name</th>
                                    <th rowspan="1" colspan="1">E-mail</th>
                                    <th rowspan="1" colspan="1">Status</th>
                                    <th rowspan="1" colspan="1">Role</th>
                                </tr>
                            </tfoot>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr role="row" class="odd">
                                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UserStatus.StatusDesc)</td>
                                    <td>@Html.DisplayFor(modelItem => item.RoleType.RoleName)</td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.UserID })"><i class="fa fa-pencil"></i></a> |
                                        <a href="@Url.Action("Details", new { id = item.UserID })"><i class="fa fa-info-circle"></i></a> |
                                        <a href="@Url.Action("Delete", new { id = item.UserID })"><i class="fa fa-times"></i></a>

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>




